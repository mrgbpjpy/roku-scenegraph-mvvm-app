<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveScreen" extends="Group" focusable="true">

    <script type="text/brightscript" uri="pkg:/components/LiveScreen.brs" />

    <children>

        <!-- Background -->
        <Rectangle
            id="bg"
            width="1280"
            height="590"
            color="0x201010FF" />

        <!-- Header -->
        <Label
            id="title"
            text="LIVE SCREEN"
            translation="[80, 40]"
            font="font:LargeSystemFont"
            color="0xFFFFFFFF" />

        <!-- ==========================
             MENU COLUMN
           ========================== -->
        <LayoutGroup
            id="liveMenu"
            layoutDirection="vert"
            itemSpacings="[16]"
            vertAlignment="top"
            horizAlignment="left"
            translation="[80, 120]"
            focusable="false">

            <!-- Menu options -->
            <Label id="opt1"
                   text="Live Now"
                   font="font:MediumSystemFont"
                   color="0xFFFFFFFF" 
                   focusable="false" />

            <Label id="opt2"
                   text="Upcoming Games"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF"
                   focusable="false" />

            <Label id="opt3"
                   text="Replays"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF"
                   focusable="false" />

            <Label id="opt4"
                   text="Highlights"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF"
                   focusable="false" />

        </LayoutGroup>

        <!-- ================================
             Underline Cursor
             Controlled by BRS code
           ================================ -->
        <Rectangle
            id="cursor"
            width="120"
            height="4"
            color="0xE6C200FF"
            opacity="0.0"
            translation="[80, 160]" />

    </children>

</component>
