<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveScreen" extends="Group">

  <interface>
    <function name="giveFocus" />
    <function name="hideCursor"/>
  </interface>

  <script type="text/brightscript" uri="pkg:/components/LiveScreen.brs" />

  <children>
    <!-- Big colored background panel -->
    <Rectangle
      id="liveBg"
      translation="[0,0]"
      width="1280"
      height="640"
      color="0x102040FF" />

    <!-- Title & instructions -->
    <Label
      id="liveTitle"
      text="LIVE SCREEN"
      translation="[80, 80]"
      font="font:MediumSystemFont"
      color="0xFFFFFFFF" />

    <Label
      id="liveSubtitle"
      text="UP/DOWN moves cursor. UP on first item returns to NavBar."
      translation="[80, 110]"
      font="font:SmallSystemFont"
      color="0xCCCCCCFF" />

    <!-- Cursor / highlight bar -->
    <Rectangle
      id="cursor"
      translation="[70, 180]"
      width="840"
      height="40"
      color="0xFFFFFF33"
      visible="false" />   <!-- translucent highlight -->

    <!-- Static items (do NOT move) -->
    <Label
      id="item0"
      text="Item 0"
      translation="[80, 185]"
      font="font:MediumSystemFont"
      color="0xFFFFFFFF" />

    <Label
      id="item1"
      text="Item 1"
      translation="[80, 225]"
      font="font:MediumSystemFont"
      color="0xFFFFFFFF" />

    <Label
      id="item2"
      text="Item 2"
      translation="[80, 265]"
      font="font:MediumSystemFont"
      color="0xFFFFFFFF" />

    <!-- Debug console at bottom -->
    <Rectangle
      id="debugBg"
      translation="[60, 460]"
      width="1160"
      height="80"
      color="0x000000FF" />

    <Label
      id="debugLabel"
      translation="[80, 480]"
      width="1120"
      height="60"
      font="font:SmallSystemFont"
      color="0xFFFFFFFF"
      wrap="true" />
  </children>
</component>
