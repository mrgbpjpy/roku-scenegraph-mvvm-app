<?xml version="1.0" encoding="UTF-8"?>
<component name="SplashVideo" extends="Group">

    <interface>
        <!-- Fired when splash is finished -->
        <field id="finished" type="boolean" alwaysNotify="true" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/SplashVideo.brs" />

    <children>

        <!-- Background (optional fade-out) -->
        <Rectangle id="bg" width="1280" height="720" color="0x000000FF" />

        <!-- Video player -->
        <Video
            id="videoPlayer"
            translation="[0, 0]"
            width="1280"
            height="720"
            loop="false"
            enableUI="false" />

    </children>

</component>
