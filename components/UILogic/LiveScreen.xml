<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveScreen" extends="Group" focusable="true">
    <script type="text/brightscript" uri="pkg:/components/LiveScreen.brs" />

    <children>
        <!-- Background -->
        <Rectangle
            id="bg"
            width="1280"
            height="590"
            color="0x201010FF" />

        <!-- Title -->
        <Label
            id="title"
            text="LIVE SCREEN"
            translation="[80, 40]"
            font="font:LargeSystemFont"
            color="0xFFFFFFFF" />

        <!-- Vertical logical menu -->
        <LayoutGroup
            id="liveMenu"
            layoutDirection="vert"
            vertAlignment="top"
            horizAlignment="left"
            itemSpacings="[16]"
            translation="[80, 120]">

            <!-- Yellow underline for LiveScreen (starts hidden) -->
            <Rectangle
                id="cursor"
                width="100"
                height="4"
                color="0xE6C200FF"
                translation="[0, 0]"
                visible="false" />

            <!-- Menu options (non-focusable) -->
            <Label
                id="opt1"
                text="Live Now"
                font="font:MediumSystemFont"
                color="0xFFFFFFFF" />

            <Label
                id="opt2"
                text="Upcoming Games"
                font="font:MediumSystemFont"
                color="0xAAAAAAFF" />

            <Label
                id="opt3"
                text="Replays"
                font="font:MediumSystemFont"
                color="0xAAAAAAFF" />

            <Label
                id="opt4"
                text="Highlights"
                font="font:MediumSystemFont"
                color="0xAAAAAAFF" />
        </LayoutGroup>
    </children>
</component>
