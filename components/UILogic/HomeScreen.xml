<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreen" extends="Group" focusable="true">
    <script type="text/brightscript" uri="pkg:/components/HomeScreen.brs" />

    <children>

        <!-- Background -->
        <Rectangle id="bg" width="1280" height="720" color="0x000000FF" />

        <!-- Hero Banner -->
        <Rectangle id="heroBanner" width="1200" height="260" translation="[40, 80]" color="0x202020FF" />

        <Label id="heroTitle"
            text="NFL: Prime Time Matchup"
            translation="[60, 100]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

        <Label id="heroSubtitle"
            text="Cowboys @ Eagles â€¢ Live Tonight 8:00 PM ET"
            translation="[60, 140]"
