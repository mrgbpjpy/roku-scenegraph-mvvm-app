        <Label id="sectionHeader"
            text="Featured Matchups"
            translation="[60, 380]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

        <!-- Cursor highlight for logical nav -->
        <Rectangle
            id="cursor"
            width="220"
            height="120"
            color="0xE6C200FF"
            opacity="0.0"
            translation="[60, 420]" />

        <!-- Logical NavBar Row -->
        <LayoutGroup
            id="featuredRow"
            layoutDirection="horiz"
            itemSpacings="[20]"
            translation="[60, 420]"
            focusable="false">

            <Group id="tile1">
                <Poster width="220" height="120" uri="pkg:/images/dal_phi.png" loadDisplayMode="scaleToFill" />
                <Label text="DAL @ PHI" translation="[0, 130]" font="font:SmallSystemFont" color="0xFFFFFFFF" />
            </Group>

            <Group id="tile2">
                <Poster width="220" height="120" uri="pkg:/images/KC_BUF.png" loadDisplayMode="scaleToFill" />
                <Label text="KC @ BUF" translation="[0, 130]" font="font:SmallSystemFont" color="0xFFFFFFFF" />
            </Group>

            <Group id="tile3">
                <Poster width="220" height="120" uri="pkg:/images/sf_sea.png" loadDisplayMode="scaleToFill" />
                <Label text="SF @ SEA" translation="[0, 130]" font="font:SmallSystemFont" color="0xFFFFFFFF" />
            </Group>

            <Group id="tile4">
                <Poster width="220" height="120" uri="pkg:/images/NYG_NE.PNG" loadDisplayMode="scaleToFill" />
                <Label text="NYG @ NE" translation="[0, 130]" font="font:SmallSystemFont" color="0xFFFFFFFF" />
            </Group>

        </LayoutGroup>
    </children>
</component>
