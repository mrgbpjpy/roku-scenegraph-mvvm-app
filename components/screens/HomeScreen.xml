<?xml version="1.0" encoding="UTF-8"?>
<!--
  HomeScreen.xml
  Main browse view: title + RowList
-->
<component name="HomeScreen" extends="Group">
  <interface>
    <!-- Selected item (if a parent wants to observe it) -->
    <field id="selectedContent" type="node" />
  </interface>

  <children>
    <!-- Background -->
    <Rectangle
      id="bg"
      width="1280"
      height="720"
      color="0x101010FF" />

    <!-- App title at top-left -->
    <Label
      id="appTitle"
      translation="[60, 40]"
      text="Roku Prototype App"
      font="Large"
      color="0xFFFFFFFF" />

    <!-- Main RowList for content rows -->
    <RowList
      id="rowList"
      translation="[60, 120]"
      itemSize="[260, 146]"
      itemSpacing="[40, 0]"
      showRowLabel="true"
      rowLabelOffset="[0, -40]"
      vertFocusAnimationStyle="floatingFocus"
      focusBitmapUri=""
      focusFootprintBitmapUri="" />

    <!-- ViewModel Task that loads content -->
    <HomeViewModel id="homeVM" />
  </children>

  <script type="text/brightscript" uri="pkg:/components/screens/HomeScreen.brs" />
</component>
