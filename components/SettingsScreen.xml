<?xml version="1.0" encoding="UTF-8"?>
<component name="SettingsScreen" extends="Group" focusable="true">

    <script type="text/brightscript" uri="pkg:/components/SettingsScreen.brs" />

    <children>

        <!-- Background -->
        <Rectangle
            id="bg"
            width="1280"
            height="720"
            color="0x000000FF" />

        <!-- Header -->
        <Label
            id="header"
            text="Settings"
            translation="[60, 60]"
            font="font:LargeSystemFont"
            color="0xFFFFFFFF" />

        <!-- Cursor highlight block (moves behind focused item) -->
        <Rectangle
            id="cursor"
            width="300"
            height="40"
            color="0x303030FF"
            opacity="0.0"
            translation="[60, 140]" />

        <!-- Menu Items (Each must be focusable for navigation) -->
        <Group
            id="settingsList"
            translation="[60, 140]"
            focusable="false">

            <Label id="st1" text="Account"
                translation="[0, 0]" font="font:MediumSystemFont"
                color="0xAAAAAAFF" focusable="true" />

            <Label id="st2" text="Preferences"
                translation="[0, 60]" font="font:MediumSystemFont"
                color="0xAAAAAAFF" focusable="true" />

            <Label id="st3" text="Notifications"
                translation="[0, 120]" font="font:MediumSystemFont"
                color="0xAAAAAAFF" focusable="true" />

            <Label id="st4" text="Help"
                translation="[0, 180]" font="font:MediumSystemFont"
                color="0xAAAAAAFF" focusable="true" />

            <Label id="st5" text="About"
                translation="[0, 240]" font="font:MediumSystemFont"
                color="0xAAAAAAFF" focusable="true" />

        </Group>

    </children>

    <!-- Makes label list behave like a vertical menu -->
    <focus>
        <focusGroup>
            <focusItem id="st1" />
            <focusItem id="st2" />
            <focusItem id="st3" />
            <focusItem id="st4" />
            <focusItem id="st5" />
        </focusGroup>
    </focus>

</component>
