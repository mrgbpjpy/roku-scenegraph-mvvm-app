<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreen" extends="Group" focusable="true">

    <script type="text/brightscript" uri="pkg:/components/HomeScreen.brs" />

    <children>

        <!-- =====================================================
             BACKGROUND
        ====================================================== -->
        <Rectangle
            id="bg"
            width="1280"
            height="720"
            color="0x000000FF" />

        <!-- =====================================================
             HERO BANNER
        ====================================================== -->
        <Rectangle
            id="heroBanner"
            width="1200"
            height="260"
            translation="[40,80]"
            color="0x202020FF" />

        <Label
            id="heroTitle"
            text="NFL: Prime Time Matchup"
            translation="[60,100]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

        <Label
            id="heroSubtitle"
            text="Cowboys @ Eagles â€¢ Live Tonight 8:00 PM ET"
            translation="[60,140]"
            font="font:SmallSystemFont"
            color="0xCCCCCCFF" />

        <!-- =====================================================
             SECTION HEADER
        ====================================================== -->
        <Label
            id="sectionHeader"
            text="Featured Matchups"
            translation="[60,380]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

        <!-- =====================================================
             FOCUS CURSOR (DEBUG VISIBLE)
        ====================================================== -->
        <Rectangle
            id="cursor"
            width="220"
            height="120"
            color="0xE6C200FF"
            opacity="0.25"
            translation="[60,420]" />

        <!-- =====================================================
             FEATURED TILE ROW
        ====================================================== -->
        <LayoutGroup
            id="featuredRow"
            layoutDirection="horiz"
            itemSpacings="[20]"
            translation="[60,420]"
            focusable="false">

            <!-- TILE 0 -->
            <Group id="tile0" width="220" height="150">
                <Poster
                    id="poster0"
                    width="220"
                    height="120"
                    uri="pkg:/images/dal_phi.png" />
                <Label
                    id="label0"
                    text="DAL @ PHI"
                    translation="[0,130]" />
            </Group>

            <!-- TILE 1 -->
            <Group id="tile1" width="220" height="150">
                <Poster
                    id="poster1"
                    width="220"
                    height="120"
                    uri="pkg:/images/KC_BUF.png" />
                <Label
                    id="label1"
                    text="KC @ BUF"
                    translation="[0,130]" />
            </Group>

            <!-- TILE 2 -->
            <Group id="tile2" width="220" height="150">
                <Poster
                    id="poster2"
                    width="220"
                    height="120"
                    uri="pkg:/images/sf_sea.png" />
                <Label
                    id="label2"
                    text="SF @ SEA"
                    translation="[0,130]" />
            </Group>

            <!-- TILE 3 -->
            <Group id="tile3" width="220" height="150">
                <Poster
                    id="poster3"
                    width="220"
                    height="120"
                    uri="pkg:/images/NYG_NE.png" />
                <Label
                    id="label3"
                    text="NYG @ NE"
                    translation="[0,130]" />
            </Group>

        </LayoutGroup>

        <!-- =====================================================
             DEBUG OVERLAY (VISIBLE ON SCREEN)
        ====================================================== -->
        <Group id="debugOverlay" translation="[60,620]">

            <Label
                id="debugFocus"
                text="[HOME DEBUG] Focus: none"
                font="font:SmallSystemFont"
                color="0x00FF00FF" />

            <Label
                id="debugIndex"
                text="[HOME DEBUG] Index: -1"
                translation="[0,20]"
                font="font:SmallSystemFont"
                color="0x00FF00FF" />

            <Label
                id="debugAction"
                text="[HOME DEBUG] Action: idle"
                translation="[0,40]"
                font="font:SmallSystemFont"
                color="0x00FF00FF" />

        </Group>

    </children>
</component>
