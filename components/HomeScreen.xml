        <Label
            id="sectionHeader"
            text="Featured Matchups"
            translation="[60, 380]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

        <!-- Static horizontal row of tiles -->
        <LayoutGroup
            id="featuredRow"
            layoutDirection="horiz"
            itemSpacings="[20]"
