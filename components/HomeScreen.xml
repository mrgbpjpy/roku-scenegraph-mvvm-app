<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreen" extends="Group" focusable="false">
    <script type="text/brightscript" uri="pkg:/components/HomeScreen.brs" />

    <children>
        <!-- Full-screen background -->
        <Rectangle
            id="bg"
            width="1280"
            height="720"
            color="0x000000FF" />

        <!-- Hero banner area -->
        <Rectangle
            id="heroBanner"
            width="1200"
            height="260"
            translation="[40, 80]"
            color="0x202020FF" />

        <!-- Hero title -->
        <Label
            id="heroTitle"
            text="NFL: Prime Time Matchup"
            translation="[60, 100]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

