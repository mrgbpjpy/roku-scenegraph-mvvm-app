            id="tile1Label"
            text="DAL @ PHI"
            translation="[0, 130]"
            font="font:SmallSystemFont"
            color="0xFFFFFFFF" />
    </Group>

            <!-- Tile 2 -->
            <Group>
                <Poster
                    id="tile2Poster"
