<?xml version="1.0" encoding="UTF-8"?>
<component name="IntroVideoScreen" extends="Group" initialFocus="videoPlayer">

    <interface>
        <!-- Signals the parent (MainScene) when video finishes -->
        <field id="done" type="boolean" alwaysNotify="true" />
    </interface>

    <children>

        <!-- Fullscreen black background -->
        <Rectangle
            id="bg"
            width="1280"
            height="720"
            color="0x000000FF" />

        <!-- Fullscreen Splash Video Player -->
        <Video
            id="videoPlayer"
            width="1280"
            height="720"
            translation="[0,0]"
            loop="false"
            control="stop"
            visible="true" />

    </children>

    <script type="text/brightscript" uri="pkg:/components/IntroVideoScreen.brs" />

</component>
