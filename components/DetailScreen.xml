<?xml version="1.0" encoding="UTF-8"?>
<component name="DetailScreen" extends="Group" focusable="true">

    <interface>
        <field id="itemData" type="assocarray"/>
        <function name="PlayFadeOut"/>
        <function name="enterMenu" />
    </interface>

    <children>

        <!-- ===============================
             DETAIL UI ROOT
        ================================ -->
        <Group
            id="detailRoot"
            width="1280"
            height="720"
            opacity="0.0"
            scale="[0.94,0.94]">
            <Rectangle width="1280" height="720" color="0x00000066" /> 

            <Poster
                id="poster"
                translation="[80,120]"
                width="400"
                height="220"
                loadDisplayMode="scaleToFill"/>

            <Label
                id="title"
                translation="[520,120]"
                font="font:LargeSystemFont"
                color="0xFFFFFFFF"/>

            <Label
                id="category"
                translation="[520,170]"
                font="font:SmallSystemFont"
                color="0xCCCCCCFF"/>

            <Label
                id="duration"
                translation="[520,210]"
                font="font:SmallSystemFont"
                color="0xCCCCCCFF"/>

            <Label
                id="description"
                translation="[520,260]"
                width="600"
                wrap="true"
                font="font:SmallSystemFont"
                color="0xDDDDDDFF"/>

            <LayoutGroup
                id="actionRow"
                translation="[520,360]"
                layoutDirection="horiz"
                itemSpacings="[40]">

            <Label id="btnPlay" text="PLAY"/>
            <Label id="btnMore" text="MORE INFO"/>
            <Label id="btnClose" text="CLOSE"/>
            </LayoutGroup>


            <Rectangle
                id="actionCursor"
                width="140"
                height="6"
                translation="[520,400]"
                color="0xE6C200FF"/>
        </Group>

        <!-- =====================================================
     MORE INFO PANEL (EXPANDED METADATA)
===================================================== -->
<Group
    id="moreInfoPanel"
    visible="false"
    translation="[100, 420]">

    <!-- Background -->
    <Rectangle
        width="1080"
        height="220"
        color="0x101010EE" />

    <!-- League -->
    <Label
        id="infoLeague"
        translation="[20,20]"
        font="font:SmallSystemFont"
        color="0xE6C200FF"
        text="LEAGUE" />

    <!-- Teams -->
    <Label
        id="infoTeams"
        translation="[20,50]"
        font="font:MediumSystemFont"
        color="0xFFFFFFFF"
        text="Teams" />

    <!-- Date / Time -->
    <Label
        id="infoDate"
        translation="[20,90]"
        font="font:SmallSystemFont"
        color="0xCCCCCCFF"
        text="Date / Time" />

    <!-- Venue -->
    <Label
        id="infoVenue"
        translation="[20,120]"
        font="font:SmallSystemFont"
        color="0xCCCCCCFF"
        text="Venue" />

    <!-- Rating -->
    <Label
        id="infoRating"
        translation="[20,150]"
        font="font:SmallSystemFont"
        color="0xCCCCCCFF"
        text="Rating" />

    <!-- Description -->
    <Label
        id="infoDescription"
        translation="[20,180]"
        width="1040"
        wrap="true"
        font="font:SmallSystemFont"
        color="0xFFFFFFFF"
        text="Description goes here." />

</Group>


        <!-- ===============================
             VIDEO PLAYER (TOPMOST)
        ================================ -->
        <Video
                id="detailVideo"
                width="1280"
                height="660"
                translation="[0, 0]"
                visible="false"
                enableUI="false"
                loop="false"/>

        <!-- ===============================
             FADE IN
        ================================ -->
        <Animation id="fadeInAnim" duration="15">
            <FloatFieldInterpolator
                fieldToInterp="detailRoot.opacity"
                key="[0,1]"
                keyValue="[0,1]"/>
        </Animation>

        <!-- ===============================
             FADE OUT
        ================================ -->
        <Animation id="fadeOutAnim" duration="10">
            <FloatFieldInterpolator
                fieldToInterp="detailRoot.opacity"
                key="[0,1]"
                keyValue="[1,0]"/>
        </Animation>

    </children>

    <script type="text/brightscript" uri="pkg:/components/DetailScreen.brs"/>

</component>
