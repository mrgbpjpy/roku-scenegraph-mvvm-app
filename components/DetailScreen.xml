<?xml version="1.0" encoding="UTF-8"?>
<component name="DetailScreen" extends="Group" focusable="true">
    <script type="text/brightscript" uri="pkg:/components/DetailScreen.brs" />

    <interface>
        <field id="itemData" type="assocarray" />
        <field id="PlayRequested" type="string" alwaysNotify="true" />
    </interface>

    <children>

        <!-- Dim background overlay -->
        <Rectangle
            id="bg"
            width="1280"
            height="720"
            color="0x000000CC" />

        <Poster
            id="poster"
            translation="[80, 120]"
            width="400"
            height="220"
            loadDisplayMode="scaleToFill" />

        <Label
            id="title"
            translation="[520, 120]"
            font="font:LargeSystemFont"
            color="0xFFFFFFFF" />

        <Label
            id="category"
            translation="[520, 170]"
            font="font:SmallSystemFont"
            color="0xCCCCCCFF" />

        <Label
            id="duration"
            translation="[520, 210]"
            font="font:SmallSystemFont"
            color="0xCCCCCCFF" />

        <Label
            id="description"
            translation="[520, 260]"
            font="font:SmallSystemFont"
            width="600"
            wrap="true"
            color="0xDDDDDDFF" />

        <!-- Action Buttons (Logical Nav) -->
        <LayoutGroup
            id="actionRow"
            translation="[520, 360]"
            layoutDirection="horiz"
            itemSpacings="[40]"
            focusable="false">

            <Label id="btnPlay" text="PLAY" font="font:MediumSystemFont" color="0xAAAAAAFF"/>
            <Label id="btnMore" text="MORE INFO" font="font:MediumSystemFont" color="0xAAAAAAFF"/>

        </LayoutGroup>

        <!-- Yellow selection underline -->
        <Rectangle
            id="actionCursor"
            width="140"
            height="6"
            color="0xE6C200FF"
            opacity="0.0"
            translation="[520, 395]" />

    </children>
</component>
