<?xml version="1.0" encoding="UTF-8"?>
<component name="MainScene" extends="Scene">

    <!-- Expose functions so child components (HomeScreen, LiveScreen, etc.)
         can call ShowDetail() and HideDetail() -->
<interface>
    <function name="ShowDetail" />
    <function name="HideDetail" />
</interface>



    <!-- Logic controllers -->
    <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />
    <script type="text/brightscript" uri="pkg:/components/UILogic/ScreenStackLogic.brs" />

    <children>

        <!-- =========================
             Top Navigation Bar
        ========================== -->
        <Group id="navBarLayer" translation="[0,0]">
            <NavBar id="navBar" translation="[0,60]" />
        </Group>

        <!-- =========================
             Root screen layer
             (Home, Live, Sports, Settings)
        ========================== -->
        <Group id="screenLayer" translation="[0,130]" />

        <!-- =========================
             Modal DetailScreen Layer
             (Completely hidden by default)
        ========================== -->
        <Group id="detailLayer" translation="[0,0]" visible="false">
            <DetailScreen id="detailScreen" />
        </Group>

        <!-- =========================
             Debug label
        ========================== -->
        <Label
            id="debugLabel"
            text="ESPN Prototype"
            translation="[40,20]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />

    </children>

</component>
