<?xml version="1.0" encoding="UTF-8"?>
<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />
    <script type="text/brightscript" uri="pkg:/components/UILogic/ScreenStackLogic.brs" />

    <children>
        <!-- Background color/texture handled in BRS -->
        <Group
            id="navBarLayer"
            translation="[0, 0]">
            <NavBar id="navBar" translation="[0, 60]" />
        </Group>

        <!-- Where all ESPN screens (Home, Live, Sports, Settings) will go -->
        <Group
            id="screenLayer"
            translation="[0, 130]" />
        
        <!-- Simple debug label at top-left -->
        <Label
            id="debugLabel"
            text="ESPN Prototype"
            translation="[40, 20]"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF" />
    </children>
</component>
