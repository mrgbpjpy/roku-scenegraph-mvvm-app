<?xml version="1.0" encoding="UTF-8"?>
<component name="NavBar" extends="Group" focusable="true" initialFocus="menuGroup">

    <!-- ===========================================================
         INTERFACE
         AppScene listens to selectedId + reselect
    ============================================================ -->
    <interface>
      <field id="selectedId" type="string" />
    <field id="navAction" type="string" />
    <field id="navPulse" type="integer" value="0" />
    <field id="underlineOffsetX" type="integer" value="0" />
    <field id="underlineOffsetY" type="integer" value="0" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/NavBar.brs" />

    <children>

        <!-- ===========================================================
             BACKGROUND BAR
        ============================================================ -->
        <Rectangle
            id="barBg"
            width="1280"
            height="60"
            color="0x111111FF" />


        <!-- ===========================================================
             HORIZONTAL TAB LAYOUT
        ============================================================ -->
        <LayoutGroup
            id="menuGroup"
            layoutDirection="horiz"
            horizAlignment="left"
            itemSpacings="[40]"
            translation="[80, 15]"
            focusable="true">

            <!-- Tab order defines navigation order -->
            <Label id="tabFeatured"
                   text="FEATURED"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF" />

            <Label id="tabHome"
                   text="HOME"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF" />

            <Label id="tabLive"
                   text="LIVE"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF" />

            <Label id="tabSports"
                   text="SPORTS"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF" />

            <Label id="tabDeveloper"
                   text="DEVELOPER INFO"
                   font="font:MediumSystemFont"
                   color="0xAAAAAAFF" />

        </LayoutGroup>


        <!-- ===========================================================
             ESPN-STYLE UNDERLINE CURSOR
        ============================================================ -->
        <Rectangle
            id="focusUnderline"
            width="100"
            height="4"
            color="0xE6C200FF"
            translation="[0,0]"
            visible="true" />


        <!-- ===========================================================
             OFF-SCREEN MEASUREMENT LABEL
        ============================================================ -->
        <Label
            id="measureLabel"
            font="font:MediumSystemFont"
            visible="false" />

    </children>


    <!-- ===========================================================
         FOCUS HANDLING
    ============================================================ -->
    <focus>
        <focusGroup>
            <focusItem id="menuGroup" />
        </focusGroup>
    </focus>

</component>
